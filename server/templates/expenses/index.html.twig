{% extends 'base.html.twig' %}

{% block title %}Expenses index{% endblock %}

{% block body %}
    <h1>Expenses index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Amount</th>
                <th>Date_expense</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for expense in expenses %}
            <tr>
                <td>{{ expense.id }}</td>
                <td>{{ expense.amount }}</td>
                <td>{{ expense.dateExpense ? expense.dateExpense|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ expense.description }}</td>
                <td>
                    <a href="{{ path('app_expenses_show', {'id': expense.id}) }}">show</a>
                    <a href="{{ path('app_expenses_edit', {'id': expense.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_expenses_new') }}">Create new</a>
{% endblock %}
